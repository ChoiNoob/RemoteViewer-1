        <!--<security:intercept-url pattern="/**" access="ROLE_USER"/>-->
        <!--<security:intercept-url pattern="/edit" access="ROLE_ADMIN"/>-->
        <!--&lt;!&ndash;<security:intercept-url pattern="/**/*.html" access="ROLE_USER"/>&ndash;&gt;-->
