<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <welcome-file-list>
        <welcome-file>mainGWT.html</welcome-file>
    </welcome-file-list>
  <!-- Servlets -->

    <servlet>
        <servlet-name>DatabaseService</servlet-name>
        <servlet-class>com.damintsev.server.services.DatabaseServerService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DatabaseService</servlet-name>
        <url-pattern>/mainGWT/DatabaseServerService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fileUpload</servlet-name>
        <servlet-class>com.damintsev.servlet.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileUpload</servlet-name>
        <url-pattern>/fileUpload/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>imageShow</servlet-name>
        <servlet-class>com.damintsev.servlet.ShowImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>imageShow</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.damintsev.servlet.ApplicationListener</listener-class>
    </listener>

    <context-param>
        <!--<description>spring context configuration</description>-->
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/application-context.xml</param-value>
    </context-param>

</web-app>
